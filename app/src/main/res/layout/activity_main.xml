<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView para mostrar el consumo total -->
    <TextView
        android:id="@+id/totalConsumptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumo Total: 0 kWh"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- ListView para mostrar la lista de habitaciones -->
    <ListView
        android:id="@+id/roomListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <!-- Botón para agregar una nueva habitación -->
    <Button
        android:id="@+id/addRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Habitación"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>
</LinearLayout>
